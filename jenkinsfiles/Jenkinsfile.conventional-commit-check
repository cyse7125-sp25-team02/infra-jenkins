pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: "PR-${CHANGE_ID}",
                    credentialsId: 'github-credentials',
                    url: 'https://github.com/cyse7125-sp25-team02/infra-jenkins.git'
                
                sh "git fetch origin master:master"
            }
        }

        stage('Determine Commit Range') {
            steps {
                script {
                    env.PR_BASE_SHA = sh(script: 'git merge-base origin/master HEAD', returnStdout: true).trim()
                    env.PR_HEAD_SHA = sh(script: 'git rev-parse HEAD', returnStdout: true).trim()
                }

                sh "git log --oneline ${env.PR_BASE_SHA}..${env.PR_HEAD_SHA}"
            }
        }

        stage('Validate Commits') {
            steps {
                sh '''
                    echo "module.exports = {extends: ['@commitlint/config-conventional']};" > commitlint.config.js
                '''

                sh "npx commitlint --from ${env.PR_BASE_SHA} --to ${env.PR_HEAD_SHA} --verbose"
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
